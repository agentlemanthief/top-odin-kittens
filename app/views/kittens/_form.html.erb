<%= form_with model: @kitten do |f| %>
  <%= f.label :name, 'Name: ' %>
  <%= f.text_field :name %>

  <br>

  <%= f.label :age, 'Age: ' %>
  <%= f.number_field :age, in: 1..20, step: 1 %>

  <br>

  <%= f.label :cuteness, 'Cuteness: ' %>
  <%= f.number_field :cuteness, in: 1..5, step: 1 %>

  <br>

  <%= f.label :softness, 'Softness: ' %>
  <%= f.number_field :softness, in: 1..5, step: 1 %>

  <br>

  <%= f.submit 'Create Kitten' %>
<% end %>
