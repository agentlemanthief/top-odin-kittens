<% if flash[:success] %>
  <%= flash[:success] %>
<% end %>

<h1>Kitten: <%= @kitten.name %></h1>

<p>Name: <%= @kitten.name %></p>
<p>Age: <%= @kitten.age %></p>
<p>Cuteness: <%= @kitten.cuteness %></p>
<p>Softness: <%= @kitten.softness %></p>

<%= link_to "Home", root_path %>
<%= link_to "Edit", edit_kitten_path(@kitten) %>
<%= link_to "Delete", kitten_path(@kitten), method: :delete, data: { confirm: "Are you sure?" } %>
